{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ],
  "crons": [
    {
      "path": "/api/ai?task=update",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/ai?task=scorer",
      "schedule": "0 13 * * *"
    },
    {
      "path": "/api/ai?task=save",
      "schedule": "0 14 * * *"
    }
  ]
}
